{
  "name": "@rimac/appointment-api",
  "version": "1.0.0",
  "description": "Main API service for Rimac appointment scheduling system",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "remove": "serverless remove",
    "logs": "serverless logs -f",
    "invoke": "serverless invoke -f",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch --passWithNoTests"
  },
  "keywords": [
    "rimac",
    "appointments",
    "api",
    "aws",
    "lambda",
    "serverless"
  ],
  "author": "Rimac Development Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.462.0",
    "@aws-sdk/client-sns": "^3.462.0",
    "@aws-sdk/util-dynamodb": "^3.462.0",
    "@rimac/shared": "^1.0.0",
    "mysql2": "^3.14.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.126",
    "@types/jest": "^29.5.8",
    "@types/uuid": "^9.0.7",
    "jest": "^29.7.0",
    "serverless": "^3.38.0",
    "serverless-esbuild": "^1.50.0",
    "serverless-offline": "^13.3.0",
    "serverless-openapi-documentation": "^0.4.0",
    "ts-jest": "^29.1.1"
  }
}
